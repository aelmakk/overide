#include <stdio.h>
#include <string.h>

read_number()
{

}

store_number()
{

}

main(int argc, char **argv, char **envp)
{

    int               var1;
    char              command[20];
    char              buff[400]; //confirmed that buff size is 400
    char              *tmp;
    
    // tmp = av[0];
    bzero(buff, sizeof(int) * 0x64);
    tmp = *argv;
    while (tmp)
    {
        memset(tmp, '\0', strlen(tmp));             //"/home/users/level07/level07"  ==> 27
        tmp++; 
    }
    tmp = *envp;            // environment variable pointer
    {
        memset(tmp, '\0', strlen(tmp)); 
        tmp++; 
    }
    puts("----------------------------------------------------
          Welcome to wil's crappy number storage service!
        ----------------------------------------------------
         Commands:
            store - store a number into the data storage
            read  - read a number from the data storage
            quit  - exit the program
        ----------------------------------------------------
           wil has reserved some storage :>
        ----------------------------------------------------\n");
    while (true)
    {
        printf("Input command: ");
        var1 = 1;
        fgets(command, 20, stdin);
        strlen(command);
        command[strlen(command) - 1] = '\0';            //newline char
        if (command == "store")
            var1 = store_number(buff);
        else if (command == "read")
            var1 = read_number(buff);
        else if (command == "quit")
            return (0);
        if (var1 == 0)
        {
            printf(" Completed %s command successfully\n", command);
            bzero(command, sizeof(command));
            // jump to main+300;
        }
        else
        {
            printf(" Failed to do %s command\n", command);
            bzero(command, sizeof(command));
            // jump to main+300;
        }
    }
    return (0);
}